# Test file for incl instruction
# This program tests the incl instruction by incrementing different registers

.pos 0
init:   irmovl Stack, %esp    # Initialize stack pointer
        irmovl Stack, %ebp    # Initialize frame pointer
        irmovl 0, %eax       # Initialize %eax to 0
        irmovl 0, %ebx       # Initialize %ebx to 0
        irmovl 0, %ecx       # Initialize %ecx to 0
        irmovl 0, %edx       # Initialize %edx to 0

        # Test incl on different registers
        incl %eax             # %eax = 1
        incl %ebx             # %ebx = 1
        incl %ecx             # %ecx = 1
        incl %edx             # %edx = 1

        # Increment again to verify it works multiple times
        incl %eax             # %eax = 2
        incl %ebx             # %ebx = 2

        # Test with different initial values
        irmovl $10, %eax      # %eax = 10
        incl %eax             # %eax = 11

        halt

.pos 0x100
Stack:                          # Stack area 